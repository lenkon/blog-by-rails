<h1 class="text-center">Welcome</h1>
<% if @users.empty? %>
  <h1 class="text-center">There is no User for now</h1>
<% end %>
<% @users.each do |user| %>
  <a href="/users/<%= user.id %>" id="user-<%= user.id %>" class="w-full max-w-3xl mx-auto cursor:pointer">
    <%= render 'shared/user_card', user: user %>
  </a>
<% end %>


