<% if user_signed_in? %>
  <div class="flex flex-col w-full max-w-3xl mx-auto gap-6 justify-center align-center">
    <h1 class="text-center">Add New Comment to post: <%= @post.title %></h1>
    <% if @comment.errors.any? %>
      <div class="post-errors-box">
        <p><%= pluralize(@comment.errors.count, "error") %> found:</p>

        <ul class="post-errors-ul">
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with url: user_post_comments_path, model: @comment, class: 'flex flex-col w-full max-w-3xl mx-auto gap-6 justify-center align-center' do |form| %>
      <div class="flex flex-col w-full max-w-3xl">
        <%= form.label :text %>
        <%= form.text_area :text, size: "70x5", class: 'w-full' %>
      </div>
      <div class="flex justify-center align-center w-full max-w-3xl">
        <%= form.submit class: 'px-4 py-2 border-2 border-black cursor:pointer mb-8' %>
      </div>
    <% end %>
</div>
<% else %>
  <p>Please, sign in to create a comment</p>
<% end %>

